<!doctype html>
<html lang="en">
  <head>
    <title>Add List</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
   
  <style>
    a{
      text-decoration: none;
    }
    body{
      width: 100%;
      margin-top: 50px;
    }
    input{
      width: 100%;
      clear: both;
      float: left;
      padding: 5px 10px;
      border-radius: 5px;
      border: 1px solid lightslategray;
      
    }
    
  </style>

  <body>
    <div class="container">
      <div class="header text-center">
        <a href="./" class="btn btn-secondary">Home</a>
        <a href="./addlist" class="btn btn-secondary">Add New User</a>
        <a href="./list" class="btn btn-secondary">All Users List</a>
      </div>
        <div>
          <h3 class="text_head text-center">Add New User</h3>
          <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <table class="table table-borderless">
                  <tr>
                    <th>First Name</th>
                    <td><input type="text" name="txtnfirstname" class="txtnfirstname" placeholder="First Name"></td>
                  </tr>
                  <tr>
                    <th>Last Name</th>
                    <td><input type="text" name="txtnlastname" class="txtnlastname"  placeholder="Last Name"></td>
                  </tr>
                  <tr>
                    <th>Mobile Number</th>
                    <td><input type="text" name="txtnmobile" class="txtnmobile"  placeholder="Mobile Number"></td>
                  </tr>
                  <tr>
                    <th>Username</th>
                    <td><input type="text" name="txtnusername" class="txtnusername" placeholder="Username" ></td>
                  </tr>
                  <tr>
                    <th>Password</th>
                    <td><input type="password" name="password" class="password" placeholder="Password" ></td>
                  </tr>
                  <tr>
                    <th></th>
                    <td><a href="" class="btn btn-primary">Sign up</a></td>
                  </tr>
              </table>
            </div>
            
            <div class="col-md-2"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
