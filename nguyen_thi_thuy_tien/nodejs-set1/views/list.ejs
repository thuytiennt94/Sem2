<!DOCTYPE html>
<html>
  <head>
    <title>List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
   
  <style>
    a{
      text-decoration: none;
    }
    body{
      width: 100%;
      margin-top: 50px;
    }
    input{
      width: 100%;
      clear: both;
      float: left;
      padding: 5px 10px;
      border-radius: 5px;
      border: 1px solid lightslategray;
      
    }
  </style>

  <body>
    <div class="container">
      <div class="header text-center">
        <a href="./" class="btn btn-secondary">Home</a>
        <a href="./addlist" class="btn btn-secondary">Add New User</a>
        <a href="./list" class="btn btn-secondary">All Users List</a>
      </div>
        <div>
          <h3 class="text_head text-center">List</h3>
          <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <table class="table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Mobile</th>
                    <th>Username</th>
                  </tr>
                </thead>
                <tbody>
                  <%
                if(usersData.length !== 0){
                    var i = 1;
                    usersData.forEach(function(data){
                %>
                    <tr>
                        <th scope="row"><%= data.id %></th>
                        <td><%= data.firstname %></td>
                        <td><%= data.lastname %></td>
                        <td><%= data.mobile %></td>
                        <td><%= data.username %></td>
                    </tr>
                <% i++; }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
                </tbody>
              </table>
            </div>
            
            <div class="col-md-2"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
